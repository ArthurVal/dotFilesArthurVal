# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  interval = 5
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"	
}

# order += "ipv6"
order += "volume master"
# order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "W: %ip (%essid,%quality)" 
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status: %percentage"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
        low_threshold = 15
}

tztime local {
        format = "%e %b %H:%M"
}

cpu_usage {
        format = "CPU: %usage"
}

load {
        format = "LOAD: %1min, %5min"
        max_threshold = "4"
}

disk "/" {
        format = "DISK: %avail"
}

volume master {
        format = "â™ª-0: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "pulse:0"
}

volume master {
        format = "â™ª-2: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "pulse:2"
}

volume master {
        format = "â™ª-1: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "pulse:1"
}